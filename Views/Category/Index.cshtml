@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Events List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="bth bth-primary">
                <i class="bi bi-plus-circle-dotted"></i>&nbsp;Create new Event
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width:1008">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display
            </th>
            <th>
                Price
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
 <tr>
                <td width="20%">
                    @obj.NameEvent
                </td>
                <td width="20%">
                    @obj.Display
                </td>
                <td width="20%">
                    @obj.Price
                </td>
                <td width="20%">
                    @obj.Date
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pen-fill"></i> Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-trash"></i> Delete</a>
					</div>
                </td>
            </tr>
        }           
     </tbody>
</div>
